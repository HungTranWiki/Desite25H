<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/image_avatar1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/avatar" />

        <ImageView
            android:background="@drawable/icon_messenger"
            android:id="@+id/image_small_icon1"
            android:layout_toEndOf="@+id/image_avatar1"
            android:layout_alignBottom="@+id/image_avatar1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />

    </RelativeLayout>



    <TextView
        android:layout_marginLeft="12dp"
        android:id="@+id/textview_name_avatar1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Micheal Jackson"
        android:textSize="15dp" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginRight="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp">
            <ImageButton
                android:scaleType="fitXY"
                android:id="@+id/image_avatar1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/avatar" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/cardview_avatar"
            android:layout_alignBottom="@id/cardview_avatar"
            app:cardCornerRadius="15dp">
            <ImageView
                android:scaleType="fitXY"
                android:background="@drawable/icon_messenger"
                android:id="@+id/image_small_icon1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>



    <TextView
        android:gravity="center"
        android:id="@+id/textview_name_avatar1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Micheal Jackson"
        android:textSize="15dp" />


</LinearLayout>
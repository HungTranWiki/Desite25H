<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/padding_20dp"
    android:paddingTop="@dimen/padding_27_54dp"
    android:paddingRight="@dimen/padding_20dp">
    <ImageView
        android:id="@+id/button_back_add_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_back"/>
    <TextView
        android:layout_marginTop="@dimen/margin_16"
        android:textSize="@dimen/text_size_18dp"
        android:textColor="@color/color_black_2"
        android:text="@string/add_address"
        android:fontFamily="@font/gotu_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/margin_8dp"
        android:textColor="@color/silver"
        android:fontFamily="@font/jost_regular"
        android:textSize="@dimen/text_size_10dp"
        android:text="@string/salutation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/padding_11dp"
            android:fontFamily="@font/jost_light"
            android:text="Select one"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15dp" />

        <Spinner
            android:id="@+id/spinner_add_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_7_31dp"
            android:pointerIcon="arrow" />
    </RelativeLayout>
    <include layout="@layout/horizontal_line_match_parent"/>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_12"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/first_name"
                android:textSize="@dimen/text_size_10dp"
                android:textColor="@color/color_gray_3"
                android:fontFamily="@font/jost_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edittext_first_name"
                android:backgroundTint="@color/color_gray_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  First name"
                android:textSize="@dimen/text_size_15dp"
                android:textColorHint="@color/color_gray_3"
                android:fontFamily="@font/jost_light"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_17"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/last_name"
                android:textSize="@dimen/text_size_10dp"
                android:textColor="@color/color_gray_3"
                android:fontFamily="@font/jost_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edittext_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Last name"
                android:backgroundTint="@color/color_gray_3"
                android:textSize="@dimen/text_size_15dp"
                android:textColorHint="@color/color_gray_3"
                android:fontFamily="@font/jost_light"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:textSize="@dimen/text_size_10dp"
        android:textColor="@color/color_gray_3"
        android:fontFamily="@font/jost_light"
        android:text="@string/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"/>
    <EditText
        android:id="@+id/edittext_company"
        android:layout_marginTop="@dimen/margin_10"
        android:hint="  Company"
        android:textSize="@dimen/text_size_15dp"
        android:backgroundTint="@color/color_gray_3"
        android:textColorHint="@color/color_gray_3"
        android:fontFamily="@font/jost_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/margin_12"
        android:textColor="@color/silver"
        android:textSize="@dimen/text_size_10dp"
        android:text="@string/street_address_"
        android:fontFamily="@font/jost_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edittext_street_address"
        android:hint="  Street address"
        android:layout_width="match_parent"
        android:textSize="@dimen/text_size_15dp"
        android:backgroundTint="@color/color_gray_3"
        android:textColorHint="@color/color_gray_3"
        android:fontFamily="@font/jost_light"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_12"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/unit_number"
                android:textSize="@dimen/text_size_10dp"
                android:textColor="@color/color_gray_3"
                android:fontFamily="@font/jost_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edittext_number"
                android:backgroundTint="@color/color_gray_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Unit number"
                android:textSize="@dimen/text_size_15dp"
                android:textColorHint="@color/color_gray_3"
                android:fontFamily="@font/jost_light"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_17"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/postal_code"
                android:textSize="@dimen/text_size_10dp"
                android:textColor="@color/color_gray_3"
                android:fontFamily="@font/jost_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edittext_postal_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Postal code"
                android:backgroundTint="@color/color_gray_3"
                android:textSize="@dimen/text_size_15dp"
                android:textColorHint="@color/color_gray_3"
                android:fontFamily="@font/jost_light"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/margin_12"
        android:textColor="@color/silver"
        android:textSize="@dimen/text_size_10dp"
        android:text="@string/contact_number_"
        android:fontFamily="@font/jost_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edittext_contact_number"
        android:hint="  Contact number"
        android:layout_width="match_parent"
        android:textSize="@dimen/text_size_15dp"
        android:backgroundTint="@color/color_gray_3"
        android:textColorHint="@color/color_gray_3"
        android:fontFamily="@font/jost_light"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/margin_left_14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkbox_add_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_check_box" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@+id/checkbox_add_address"
            android:fontFamily="@font/jost_light"
            android:text="@string/set_as_default_address"
            android:textColor="@color/color_black_1"
            android:textSize="@dimen/text_size_15dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textview_add_address"
        android:layout_marginTop="@dimen/margin_36dp"
        android:gravity="center"
        android:background="@drawable/black_button"
        android:fontFamily="@font/jost_regular"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Add"/>






</LinearLayout>